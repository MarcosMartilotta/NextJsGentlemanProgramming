{
  "extends": ["next/core-web-vitals","airbnb", "plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion":"latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "max-len": ["error", 140],//para que podamos escribir mas codigo por linea
    "quotes": [2, "single", {"avoidEscape":true}]//el avoid scape true para que nos deje usar comillas simples en algunos casos
  }
}
